<Window x:Class="DegreeWork.SettingProbabilityOfMutation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DegreeWork"
        mc:Ignorable="d"
        Title="Задать вероятность мутации" SizeToContent="WidthAndHeight" MinHeight="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите вероятность возникновения мутации (от 0 до 1)" Margin="10" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" >
            <TextBox x:Name="probabilityOfMutationTextBox" MinWidth="50" MinHeight="20" MaxWidth="50" MaxHeight="20" HorizontalAlignment="Center" Padding="0" Margin="0,0,20,0" FontSize="14" PreviewTextInput="probabilityOfMutationTextBox_PreviewTextInput" />
            <Button x:Name="setProbabilityOfMutationButton" Background="#FFDAEEF1"  Width="80" Height="20" HorizontalAlignment="Center" Content="Задать" Click="setProbabilityOfMutationButton_Click" />
        </StackPanel>
    </Grid>
</Window>
